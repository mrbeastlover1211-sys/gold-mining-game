# Ultra-Cheap Production Environment Configuration
# Copy this to .env and update with your actual values

# DATABASE - Supabase FREE tier (supports up to 50K users at $0/month)
# Get this from: https://supabase.com/dashboard/project/settings/database
DATABASE_URL=postgresql://postgres:[password]@db.[project-ref].supabase.co:5432/postgres

# NODE ENVIRONMENT
NODE_ENV=production

# SERVER PORT (Vercel/Railway auto-assigns this)
PORT=3000

# SOLANA CONFIGURATION
SOLANA_NETWORK=devnet
# For mainnet, change to: https://api.mainnet-beta.solana.com

# ADMIN WALLET (for receiving payments)
ADMIN_WALLET=67agGdBaroRL6SJguYT13eVMkWGCegfFbQgnHaJub45C

# CORS CONFIGURATION (add your domain)
ALLOWED_ORIGINS=https://yourdomain.com,https://yourdomain.vercel.app

# RATE LIMITING (requests per minute per IP)
RATE_LIMIT_MAX=60

# BATCH PROCESSING (seconds between database writes)
BATCH_INTERVAL=30

# CACHE TTL (minutes)
CACHE_TTL=5

# CLEANUP SETTINGS (days)
INACTIVE_USER_CLEANUP_DAYS=7

# MONITORING
ENABLE_STATS_ENDPOINT=true

# FEATURE FLAGS
ENABLE_ANTI_IDLE=true
ENABLE_BATCH_PROCESSING=true
ENABLE_CLIENT_SIDE_MINING=true